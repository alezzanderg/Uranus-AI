{
  "name": "uranus-ai-editor",
  "version": "1.2.0",
  "description": "AI-Enhanced Code Editor based on Code-OSS with native multi-model AI integration",
  "main": "src/main.js",
  "author": "Uranus-AI Team",
  "license": "MIT",
  "homepage": "https://github.com/alezzanderg/Uranus-AI",
  "repository": {
    "type": "git",
    "url": "https://github.com/alezzanderg/Uranus-AI.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "electron-log": "^4.4.8",
    "node-pty": "^1.0.0",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.uranusai.editor",
    "productName": "Uranus-AI Editor",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../ai-backend/dist/uranus-ai-backend.exe",
        "to": "backend/uranus-ai-backend.exe"
      },
      {
        "from": "../vscode/out",
        "to": "vscode",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Uranus-AI Editor",
      "include": "build/installer.nsh",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "alezzanderg",
      "repo": "Uranus-AI"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

