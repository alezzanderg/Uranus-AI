# AI Backend Configuration
DEBUG=true
APP_NAME="AI Assistant Backend"
VERSION="1.0.0"

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "vscode-file://vscode-app"]

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=sqlite:///./ai_assistant.db
# For PostgreSQL: postgresql://user:password@localhost/ai_assistant
# For MySQL: mysql://user:password@localhost/ai_assistant

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ai_assistant.log

# Context Configuration
MAX_CONTEXT_LENGTH=8000
MAX_FILE_SIZE_MB=1
MAX_CONVERSATION_HISTORY=50

